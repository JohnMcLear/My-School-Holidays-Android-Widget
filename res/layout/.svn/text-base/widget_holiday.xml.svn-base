<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dip"
    android:layout_marginRight="10dip"
    android:background="@drawable/bg_widget" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginLeft="4dip"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@drawable/image_msh" >
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginLeft="4dip"
        android:layout_weight="1"
        android:background="@drawable/calendar_box"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageDay1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cal_0" >
        </ImageView>

        <ImageView
            android:id="@+id/imageDay2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cal_1" >
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight="4"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dip"
            android:layout_weight="1"
            android:src="@drawable/holiday_text" >
        </ImageView>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center" >

            <ImageView
                android:id="@+id/date_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/date_0" >
            </ImageView>

            <ImageView
                android:id="@+id/date_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/date_1" >
            </ImageView>

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/date_slash" >
            </ImageView>

            <ImageView
                android:id="@+id/month_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/date_0" >
            </ImageView>

            <ImageView
                android:id="@+id/month_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/date_8" >
            </ImageView>

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/date_slash" >
            </ImageView>

            <ImageView
                android:id="@+id/year_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/date_2" >
            </ImageView>

            <ImageView
                android:id="@+id/year_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/date_0" >
            </ImageView>

            <ImageView
                android:id="@+id/year_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/date_1" >
            </ImageView>

            <ImageView
                android:id="@+id/year_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/date_1" >
            </ImageView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>