<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:paddingLeft="10dip"
	android:paddingRight="10dip">
	<TextView android:text="@string/label_enter_school_name"
		android:id="@+id/textView1" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_marginLeft="2dip"
		android:layout_marginRight="2dip" android:layout_marginTop="5dip"
		android:textStyle="bold" android:textSize="14dip"></TextView>
	<EditText android:layout_height="wrap_content" android:id="@+id/editTextSchoolName"
		android:layout_width="fill_parent" android:hint="@string/label_school_name"
		android:layout_marginTop="5dip" android:layout_marginLeft="2dip"
		android:layout_marginRight="2dip" android:singleLine="true">
		<requestFocus></requestFocus>
	</EditText>
	<ListView android:layout_height="wrap_content" android:id="@+id/listView1"
		android:layout_width="fill_parent" android:layout_weight="1"
		android:layout_marginTop="5dip"></ListView>
	<LinearLayout android:layout_height="wrap_content"
		android:id="@+id/linearLyaout1" android:layout_width="fill_parent">
		<TextView android:text="TextView" android:id="@+id/textView2"
			android:layout_width="wrap_content" android:layout_height="fill_parent"
			android:layout_weight="1" android:gravity="center_vertical"
			android:paddingLeft="2dip" android:paddingRight="2dip"
			android:textStyle="bold" android:textSize="14dip" android:singleLine="true"></TextView>
		<Button android:text="@string/label_save" android:id="@+id/button1"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_gravity="right" android:visibility="invisible"
			android:layout_marginRight="2dip"></Button>
	</LinearLayout>
</LinearLayout>
